<Page x:Class="AireAtlantique.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AireAtlantique"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="551.434"
      Title="MainPage">

    <Grid Background="#FFAFBDC4" >
        <Button x:Name="bAddFormation" Content="Ajouter une formation" HorizontalAlignment="Left" Height="238" Margin="10,36,0,0" VerticalAlignment="Top" Width="146" BorderBrush="{x:Null}" Foreground="White" Background="#FF284395"/>
        <Button x:Name="bAddSession" Content="Ajouter une session" HorizontalAlignment="Left" Height="238" Margin="196,36,0,0" VerticalAlignment="Top" Width="140" Background="#FFE8562E" BorderBrush="{x:Null}" Foreground="White" Click="bAddSession_Click"/>
        <Button x:Name="bAddPersonne" Content="Ajouter une personne" HorizontalAlignment="Left" Height="238" Margin="366,36,0,0" VerticalAlignment="Top" Width="141" Foreground="White" Background="#FF4CAF4F" BorderBrush="{x:Null}" Click="bAddPersonne_Click"/>

    </Grid>
</Page>
